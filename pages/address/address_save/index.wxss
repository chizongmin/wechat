page{width: 100%;height: 100%;}
.enter{width:50rpx;height:50rpx;}
.body{width: 100%;height: 100%;padding:40rpx 20rpx 10rpx 40rpx}
.body .title{width:15%;height: 100%;color: #999;display:flex;align-items: center;font-size: 36rpx;}
.body .input{width:85%;height: 100%;color: #555;display:flex;align-items: center;font-size: 36rpx;}
.placeholder{color: #cacaca;width: 100%;font-size: 30rpx;}
.body .address{width:100%;height: 15%;}
.body .address .choose{width:100%;height: 50%;display:flex;}
.body .address .choose .title{width:15%;height: 100%;color: #999;display:flex;align-items: center;}
.body .address .choose .chooseVillager{width:80%;height: 100%;display: flex;align-items: center;color: #555;}
.body .address .detail{width:100%;height: 50%;font-size: 36rpx;color:#999;}
.body .address .detail .detailInput{width:750rpx;color: #555;}
.body .name{width:100%;height: 10%;color:#999;display:flex;}
.body .phone{width:100%;height: 10%;color:#999;display:flex;}
.body .default{width:100%;height: 15%;color:#999;display:flex;align-items: center;justify-content: space-between;}
.body .default .defaultLeft{width:80%;height: 100%;}
.body .default .defaultLeft .title{width:100%;height: 60%;}
.body .default .tip{width:100%;height: 40%;color:#999;font-size: 30rpx;}
.body .default .defaultRight{font-size: 33rpx;width:20%;height: 100%;}
.body .default .defaultRight .switch{transform: scale(.8)}
.bottom {width:100%;height: 20%;}
.bottom .button { border-radius: 50rpx;background: #fc7c07;color: white;font-weight: normal; border:solid 1rpx ;}