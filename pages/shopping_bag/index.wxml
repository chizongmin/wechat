<!--pages/shopping_bag/index.wxml-->

<view class="container">
  <view class="top">
    <scroll-view class="scroll" scroll-y="true" scroll-with-animation='true'>
      <block wx:for="{{bagList}}" wx:for-item="item" wx:key='index'>
          <view class='item' id="{{item.id}}">
            <view class="checkRadio">
              <label class="radio">
                <radio value="{{item.id}}" checked="true" color="#fc7c07"/>
              </label>
            </view>
            <view class="goods">
              <view class="picView">
                <image class="pic" src='{{item.indexImage}}'></image>                 
              </view> 
              <view class="detail">
                <view class="title"> 
                    {{item.name}}
                </view>
                <view class="remark">
                  <text> {{item.remark}}</text>
                </view>
                <view class="price">
                    <view class="newPrice">
                      <text class="symbol">￥</text>
                      <text class="number">{{item.sum}}</text>
                    </view>
                    <view class="oldPrice" wx:if="{{item.oldSum}}">
                      <text>￥{{item.oldSum}}</text>                        
                    </view>
                </view>
                <view class="sale">
                    <text>累计销量{{item.saleNumber}}件</text>
                </view>
              </view>                           
            </view>
             <view class="changeNumber middle">
              <view class="change middle">
                <view class="reduce">
                  -
                </view>
                <view class="number middle">
                  <text class="transform">2</text>
                </view>
                <view class="plus">
                  +
                </view>
              </view>
            </view> 
          </view>
      </block>
    </scroll-view>
  </view>
  <view class="bottom">
    <view class="tip">
      <text>首单满十元，免费赠送小葱一捆</text>
    </view>
    <view class="commit">
      <view class="checkRadio middle">
        <label>
          <radio class="radio" value="{{item.id}}" color="#fc7c07"/>
        </label>
      </view>
      <view class="checkRadioRight middle">
        <text>全选</text>
      </view>
      <view class="blank"></view>
      <view class="commitMiddle middle">
        <view class="totalText middle">合计</view>
        <view class="commitMoney">
          <text class="moneySymbol">￥</text>
          <text>29.5</text>
        </view>
      </view>
      <view class="commitButton middle">
        <button class="button" size="mini">
          <text class="text">去结算(6)</text>
        </button>
      </view>
    </view>
  </view>
</view>
