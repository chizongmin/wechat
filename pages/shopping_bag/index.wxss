/* pages/shopping_bag/index.wxss */
page{width: 100%;height: 100%;}
.header{width: 100%;height: 5%;background-color:#fc7c07;display: flex;align-items:center;justify-content:flex-end;}
.header .edit{color: white;font-size: 30rpx;height: 100%;width:15%;display:flex;justify-content:center;}
.top{width: 100%;height: 83%;}
.top .scroll{width: 100%;height: 100%;}
.top .scroll .item{width: 100%;height: 25%;display: flex;}
.top .scroll .item .checkRadio{width: 12%;height: 100%;display: flex;align-items:center;justify-content:center;}
.top .scroll .item .checkRadio .radio{ transform:scale(0.7);}
.top .scroll .item .picView{width: 32%;display:flex;align-items:center;justify-content:center;}
.top .scroll .item .picView .pic{height: 90%;width: 90%;}
.top .scroll .item .right{width: 56%;height: 100%;padding:15rpx 15rpx 15rpx 15rpx;}
.top .scroll .item .right .rightTop{width: 100%;height: 75%;}
.top .scroll .item .right .rightTop .title{height:60%;font-size: 30rpx;display: flex;align-items:center;}
.top .scroll .item .right .rightTop .remark{height:40%;font-size: 24rpx;color:#999;display: flex;align-items:center;}
.top .scroll .item .right .rightBottom{width: 100%;height: 25%;display: flex;align-items:center;justify-content: space-between;}
.top .scroll .item .right .rightBottom .price{width:50%;display: flex;align-items:baseline;}
.top .scroll .item .right .rightBottom .price .newPrice{color:#fc7c07;}
.top .scroll .item .right .rightBottom .price .symbol{font-size: 22rpx}
.top .scroll .item .right .rightBottom .price .number{font-size: 35rpx;font-weight:bold;}
.top .scroll .item .right .rightBottom .price .oldPrice{font-size: 20rpx;color:#999;margin-left: 20rpx;text-decoration:line-through}
.top .scroll .item .right .rightBottom .changeNumber{width: 50%;height: 100%;display:flex;align-items:center;justify-content:flex-end;}
.top .scroll .item .right .rightBottom .changeNumber .change{width: 80%;height: 80%;display:flex;align-items:center;justify-content:flex-end;}
.top .scroll .item .right .rightBottom .changeNumber .change .reduce {width: 25%;height: 100%;color:#999;display: flex;align-items:center;justify-content:flex-start}
.top .scroll .item .right .rightBottom .changeNumber .change .number {width: 50%;height: 100%;color:#999;background-color: #f5f5f5;}
.top .scroll .item .right .rightBottom .changeNumber .change .number .transform{transform:scale(0.7);}
.top .scroll .item .right .rightBottom .changeNumber .change .plus {width: 25%;height: 100%;color:#999;display: flex;align-items:center;justify-content:flex-end}
.bottom {width: 100%;height: 12%;background-color:ghostwhite;}
.bottom .tip {width: 100%;height: 30%;font-size: 22rpx;margin-left:35rpx;color:limegreen;display:flex;align-items:flex-end}
.bottom .commit {width: 100%;height: 70%;display:flex;}
.bottom .commit .checkRadio{width: 12%;height: 100%}
.bottom .commit .checkRadio .radio{transform:scale(0.7);}
.bottom .commit .checkRadioRight{width: 10%;height: 100%;font-size: 26rpx;}
.bottom .commit .blank{width: 18%;height: 100%}
.bottom .commit .commitMiddle{width: 30%;height: 100%;font-size: 26rpx;}
.bottom .commit .commitMiddle .totalText{width: 30%;height: 100%}
.bottom .commit .commitMiddle .commitMoney{color:#fc7c07;font-size: 45rpx;width: 70%;}
.bottom .commit .commitMiddle .commitMoney .moneySymbol{font-size: 26rpx;}
.bottom .commit .commitButton{width: 30%;height: 100%}
.bottom .commit .commitButton .button::after{border: none;}
.bottom .commit .commitButton .button { border-radius: 30px;background: #fc7c07;color: white;font-weight: normal; }
.bottom .commit .commitButton .button .text{ font-size: 33rpx !important; }