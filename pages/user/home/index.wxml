            </veiw>
            <view class="title">
              <text>待退货</text>
            </view>
          </view>
          <view class="picTitle">
            <veiw class="pic">
              <image class="icon" src="/image/peisong2.png"/>
            </veiw>
            <view class="title">
              <text>待配送</text>
            </view>
          </view>
        </view>
        <view class="viewBody">      
          <view class="picTitle">
            <veiw class="pic">
              <image class="icon" src="/image/complete.png"/>
            </veiw>
            <view class="title">
