page{width: 100%;height: 100%;}
.image{width:45rpx;height: 45rpx;}
.scroll{width: 100%;height: 88%;}
.scroll .block{width: 100%;height: 17%;padding: 0rpx 30rpx 0rpx 50rpx;}
.scroll .block .address{width: 100%;height: 100%;display: flex;align-items: center;justify-content: space-between;border-bottom:solid 1rpx #f7f7f7}
.scroll .block .address .contact{width: 100%;height: 80%;}
.scroll .block .address .contact .building{width: 100%;height: 50%;display: flex;align-items: center;font-weight: bold;font-size: 35rpx;color: #555;}
.scroll .block .address .contact .building .default{border:solid 1rpx;background-color: red;border-radius:8rpx;color:white;font-weight: normal;font-size:25rpx;width: 60rpx;height: 35rpx;margin-left: 10rpx;}
.scroll .block .address .contact .namePhone{width: 100%;height: 50%;display: flex;align-items: center;font-size: 33rpx;color: #999;}
.scroll .block .address .edit{width: 10%;height: 100%;}
.bottom{width: 100%;height: 12%;}
.bottom .button { border-radius: 50rpx;background: #fc7c07;color: white;font-weight: normal; border:solid 1rpx ;}