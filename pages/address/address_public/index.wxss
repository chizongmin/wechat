page{width: 100%;height: 100%;}
.image{width:35rpx;height: 35rpx;margin-left: 25rpx;}
.header{width: 100%;height: 11%;background-color:#fff;border-bottom:1rpx solid #f5f5f5;}
.header .input{width:90%;height:60%;background-color:#f5f5f5;border-radius:50rpx;display: flex;align-items: center;}
.header .input .iconfont{font-size:35rpx;color:#555;}
.header .input .placeholder{color:#999;}
.header .input input{font-size:26rpx;height:100%;width: 90%; margin-left: 20rpx;}
.scroll{width: 100%;height: 89%;padding: 20rpx 10rpx 10rpx 50rpx;}
.scroll .villager{width: 100%;height: 70rpx;font-size: 36rpx;color: #999;display: flex;align-items: center;}
.scroll .country{width: 100%;height: 60rpx;font-size: 37rpx;color: #555;margin-left: 60rpx;display: flex;align-items: center;}