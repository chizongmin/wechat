  </view>
  <view class="body">
    <view class="profit">
      <view class="score">
        <veiw class="number">
            <text>32132</text>
        </veiw>
        <view class="title">
          <text>积分</text>
        </view>
      </view>
      <view class="coupon">
        <veiw class="number">
            <text>0</text>
        </veiw>
        <view class="title">
